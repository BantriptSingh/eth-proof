pragma solidity ^0.8.0;

contract VariableContract {
    // State variables
    uint public uintV;
    string public stringV;
    bool public boolV;
    address public addressV;

    // Setter functions
    function setUintVariable(uint newValue) public returns (uint) {
        uintV = newValue;
        return uintV;
    }

    function setStringVariable(string memory newValue) public returns (string memory) {
        stringV = newValue;
        return stringV;
    }

    function setBoolVariable(bool newValue) public returns (bool) {
        boolV = newValue;
        return boolV;
    }

    function setAddressVariable(address newValue) public returns (address) {
        addressV = newValue;
        return addressV;
    }

    // Getter functions (automatically generated by Solidity for public state variables)
}
